{% extends 'base.html.twig' %}


{% block body %}
    <h1 class="text-center mt-5 mb-3">Modifier un Partenaire</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="form-group col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 text-center">
                {{ form_start(formAdminEdit) }}
                <div class="my-custom-class-for-errors alert-danger">
                    {{ form_errors(formAdminEdit) }}
                    <span class="text-danger">{{ form_errors(formAdminEdit.nom) }}</span>
                    <span class="text-danger">{{ form_errors(formAdminEdit.description) }}</span>
                    <span class="text-danger">{{ form_errors(formAdminEdit.photo) }}</span>
                </div>
                <div class="row justify-content-center mt-2">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        {{ form_row(formAdminEdit.nom) }}
                    </div>
                </div>
                <div class="row justify-content-center mt-2">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        {{ form_row(formAdminEdit.photo) }}
                    </div>
                </div>
                {% if id.photo is not empty %}
                <div class="row justify-content-center mt-2">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <p>Photo actuel:</p>
                        <img alt="photo partenaire actuel" src="{{ asset('asset/img/profil/') }}{{ id.photo }}">
                    </div>
                </div>
                {% endif %}
                <div class="row justify-content-center mt-2">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-xl-10">
                        {{ form_row(formAdminEdit.description) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 justify-content-center">
                        {{ form_rest(formAdminEdit) }}
                        {{ form_end(formAdminEdit) }}
                        <a class="btn btn-secondary mt-2" href="{{ path('partenaire_index') }}">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//cdn.ckeditor.com/4.13.0/full/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'partenaire[description]' );
    </script>
{% endblock %}