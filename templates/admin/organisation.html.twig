{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center mt-5 mb-3">Associer un membre Ã  un service</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="form-group col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 text-center">
                {{ form_start(formAjout) }}
                <div class="my-custom-class-for-errors alert-danger">
                    {{ form_errors(formAjout) }}
                    <span class="text-danger">{{ form_errors(formAjout.idUtilisateur) }}</span>
                    <span class="text-danger">{{ form_errors(formAjout.idService) }}</span>
                </div>
                <div class="row justify-content-center mt-2">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        {{ form_row(formAjout.idUtilisateur) }}
                    </div>
                </div>
                <div class="row justify-content-center mt-2">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        {{ form_row(formAjout.idService) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 justify-content-center">
                        {{ form_rest(formAjout) }}
                        {{ form_end(formAjout) }}
                        <a class="btn btn-secondary mt-2" href="{{ path('service_index') }}">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}