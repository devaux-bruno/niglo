{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="container body">
            <div class="row justify-content-center">
                <div class="form-group col-12 col-sm-12 col-md-10 col-lg-6 col-xl-6 text-center">
                    <h1 class="h3 mt-5 mb-3 font-weight-normal">Vous Connecter</h1>
                    <label for="inputEmailUtilisateur" class="sr-only">Email</label>
                    <input type="email" value="{{ last_username }}" name="emailUtilisateur" id="inputEmailUtilisateur" class="form-control" placeholder="Votre mail" required autofocus>
                    <label for="inputPassword" class="sr-only">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="btn btn-lg btn-primary mt-5" type="submit">
                        Se connecter
                    </button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}